= #link_to "Create Project", new_project_path

.content_area
  .content_header
    %a{href: "#"}
      Show Project Details
      = image_tag "arrow.png"
  .tab_bg  
  .tabs
    %ul
      %li
        = link_to "All Projects", projects_path, :class => "active"
      %li
        %a{href: "#"} My Projects
      %li
        %a{href: "#"} Upcoming Projects
      %li
        %a{href: "#"} Completed Projects
  .clearfix
  - @projects.each do |project|
    #slideToggle.msgactive.msg
      .profile_pic
        %img{alt: "", src: "images/profile_png.png"}/
      .time_btn
        %a{href: "#"} 5:30
      .content_text
        %h3
          = project.project_title
        %p
          = truncate("#{project.project_details}", :length => 70)
      .new_msgs
        %h3 2
        %a{href: "#"} New Messages
        %p 06/03/2011
      .drop_arrow
        %a{href: "#"} arrow
    .info_main_box
      .info
        = image_tag "info.png"
        %textarea{cols: "50", rows: "4"}
          = project.project_details
      .info
        = image_tag "attachment.png"
        .attch_box
          .attach
            %a{href: "#"} Task_New_layout.PNG (48KB)
          .attach
            %a.file_attach{accept: "image/*", href: "#"} Attach New File
      .info
        =image_tag "chat.png"
        .chat_box
          %textarea{cols: "50", rows: "1"}
          %a{href: "#"}
            = image_tag "attachment.png"
        .clearfix  
        .line_bar  
        .comment_box
          .user
            %a.attachment_blue_box{href: "#"}
              = image_tag "attachment_blue.png"
            %a{href: "#"} Thiyagu
            %span 3 hours ago
            .clearfix  
            %p Creating task page mockup. Still alot of works pending.
            %p Will take more than 2 days I guess....! Pls download new screens.
          .user.blue_box
            %a{href: "#"} Sumanth
            %span 10 hours ago
            %p Thiyagu, How's things going on?
          .user.blue_box.cntr
            = image_tag "loading.gif"


:javascript
  $("#slideToggle").click(function () {
    $('.info_main_box').slideToggle(600);
  }); 
  $("#slideToggle1").click(function () {
    $('.info_main_box1').slideToggle(600);
  });
  $(window).load(function(){
    $("[data-toggle]").click(function() {
      var toggle_el = $(this).data("toggle");
      $(toggle_el).toggleClass("open-sidebar");
    });
  });